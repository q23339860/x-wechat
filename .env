# -------------------------------
# GPT 翻译 API 配置
# -------------------------------
# 请将下面的 GPT_API_URL 修改为你的 GPT 翻译 API 地址，注意地址必须保留 "/v1/chat/completions" 后缀。
GPT_API_URL=https://api.openai.com/v1/chat/completions

# 请将下面的 GPT_API_SK 修改为你从 API 提供者处获得的令牌（Token）。
GPT_API_SK=


# -------------------------------
# Twitter API 配置
# -------------------------------
# TWITTER_API_HOST 一般保持为 api.tikhub.io，如有特殊需求再修改。
TWITTER_API_HOST=api.tikhub.io

# 请将下面的 TWITTER_API_SK 修改为你的 Twitter API 的 SK 令牌。
TWITTER_API_SK=


# -------------------------------
# 企业微信机器人配置
# -------------------------------
# 请将下面的 WEIXIN_WEBHOOK_URL 修改为你的企业微信机器人的 Webhook 地址。
WEIXIN_WEBHOOK_URL=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your_webhook_key_here


# -------------------------------
# 轮询和延时设置（单位：秒）
# -------------------------------
# POLL_INTERVAL 表示整个程序每次循环结束后等待的时间（默认 10800 秒，即 3 小时）。
POLL_INTERVAL=10800

# SCREEN_CHECK_DELAY 表示处理每个用户之间的等待时间（默认 2 秒）。
SCREEN_CHECK_DELAY=2

WECHAT_CORP_ID = ""
WECHAT_APP_SECRET = ""
WECHAT_AGENT_ID = ""
WECHAT_USER_ID = "@all" 
